#include <stdio.h>

#include <stdio_ext.h>

/* setbuf(NULL,stdin) para Windows */

/* Pedir 5 números y calcular promedio */

int main()
{
    int numero;
    float promedio;
    int i;

    promedio = 0;

    for(i = 0; i < 5; i++)
    {
    	printf("Ingrese un número: ");
    	scanf("%d", &numero);
    	promedio += numero;
    }

    promedio = promedio / i;

    printf("El promedio es %f", promedio);
}

