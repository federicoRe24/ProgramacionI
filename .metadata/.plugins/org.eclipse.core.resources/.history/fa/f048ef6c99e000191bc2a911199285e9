void prueba(){

	// void *t; //Puntero a void.

	int *p;
	int a = 1;
	//p = NULL;
	p = &a;
	std::cout << p << std::endl;
	std::cout << &p << std::endl;
	std::cout << *p << std::endl;

	*p = *p +1;
	std::cout << *p << std::endl;
	p = p + 1;
	std::cout << p << std::endl;
	std::cout << &p << std::endl;
	std::cout << *p << std::endl;

	float *q, b;
	q = &b;
	std::cout << q << std::endl;
	std::cout << &q << std::endl;
	std::cout << *q << std::endl;

